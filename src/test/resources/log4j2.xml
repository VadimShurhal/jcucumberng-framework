<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="logPath">target/cucumber-output/test-logs</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{DATE} [%t] %logger{36}.%M() - %msg%n" />
		</Console>
		<RollingFile name="rollingFile" fileName="${logPath}/test-report.log" filePattern="${logPath}/test-report_%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="[%-5level] %d{DATE} [%t] %logger{36}.%M() - %msg%n" />
			<Policies>
				<!-- Create log file every time the JVM starts -->
				<OnStartupTriggeringPolicy />
				<!-- Roll log file based on date/time pattern -->
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="DEBUG" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="rollingFile" />
		</Root>
	</Loggers>
</Configuration>